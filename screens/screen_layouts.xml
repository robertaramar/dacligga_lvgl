<!-- This screen contains many nested layouts.
     By pressing Ctrl or Cmd you can visualize the bounding box of the UI elements -->
<screen>
	<view style_bg_color="#dc_light_background">
		<!-- The whole screen is a column layout: header on the top and some content below it -->
		<column width="100%" height="100%">
			<!-- A header where the children are placed in a row.
			     "space_between" uses the whole space evenly -->
			<row width="100%" height="10%" style_flex_main_place="space_between" style_pad_all="2" align="center">
				<lv_label
					translation_tag="inputs"
					style_text_font="big_shoulders_14"
					width="100%"
					style_text_align="center"
				/>
			</row>
			<row
				width="100%"
				height="25%"
				style_flex_main_place="space_between"
				style_pad_all="4"
				style_border_width="1"
				style_border_side="bottom"
			>
				<icon_button icon="icon_midi" height="100%" bind_checked="in_midi_uart">
					<event_cb callback="input_button_callback" trigger="clicked" user_data="input-uart" />
				</icon_button>
				<icon_button icon="icon_usb" height="100%" bind_checked="in_midi_usb">
					<event_cb callback="input_button_callback" trigger="clicked" user_data="input-usb" />
				</icon_button>
				<icon_button icon="icon_gear" height="100%" bind_checked="in_internal">
					<event_cb callback="input_button_callback" trigger="clicked" user_data="input-internal" />
				</icon_button>
			</row>

			<row
				width="100%"
				height="30%"
				style_flex_main_place="center"
				style_pad_all="8"
				align="center"
				style_border_color="0x000000"
			>
				<lv_label
					width="20%"
					height="100%"
					align="center"
					hidden="1"
					style_align="center"
					text="#heartbeat_left"
					style_text_font="big_shoulders_45"
					style_text_align="center"
				/>
				<lv_button align="center" width="40%" height="90%" style_pad_all="0" style_bg_color="0x7c0000">
					<lv_label
						bind_text="bpm_active"
						style_text_font="big_shoulders_45"
						width="100%"
						style_text_align="center"
					/>
					<event_cb callback="bpm_button_callback" trigger="clicked" user_data="bpm-button" />
				</lv_button>
				<lv_label
					width="20%"
					height="100%"
					align="center"
					hidden="1"
					style_align="center"
					text="#heartbeat_right"
					style_text_font="big_shoulders_45"
					style_text_align="center"
				/>
			</row>

			<row
				width="100%"
				height="25%"
				style_flex_main_place="space_between"
				style_pad_all="4"
				style_text_color="0xddd"
				style_border_width="1"
				style_border_side="top"
			>
				<icon_button icon="icon_midi" height="100%" bind_checked="out_midi_uart">
					<event_cb callback="output_button_callback" trigger="clicked" user_data="output-uart" />
				</icon_button>
				<icon_button icon="icon_usb" height="100%" bind_checked="out_midi_usb">
					<event_cb callback="output_button_callback" trigger="clicked" user_data="output-usb" />
				</icon_button>
				<icon_button icon="icon_lineout" height="100%" bind_checked="out_midi_lineout">
					<event_cb callback="output_button_callback" trigger="clicked" user_data="output-lineout" />
				</icon_button>
				<icon_button icon="icon_buzzer" height="100%" bind_checked="out_midi_buzzer">
					<event_cb callback="output_button_callback" trigger="clicked" user_data="output-buzzer" />
				</icon_button>
			</row>
			<row width="100%" height="10%" style_flex_main_place="space_between" style_pad_all="2" align="center">
				<lv_label
					translation_tag="outputs"
					style_text_font="big_shoulders_14"
					width="100%"
					style_text_align="center"
				/>
			</row>
		</column>
	</view>
</screen>
